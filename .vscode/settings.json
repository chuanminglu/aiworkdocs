{
    // 性能优化设置
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/aidocs-env/**": true,
        "**/crane_demo_env/**": true,
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
        "**/logs/**": true,
        "**/output/**": true,
        "**/cache/**": true
    },
    
    // 搜索排除优化
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/aidocs-env": true,
        "**/crane_demo_env": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/logs": true,
        "**/output": true,
        "**/cache": true
    },
    
    // 文件关联优化
    "files.associations": {
        "*.md": "markdown",
        "*.json": "json",
        "*.py": "python"
    },
    
    // 编辑器性能优化
    "editor.suggest.showWords": false,
    "editor.suggest.showSnippets": true,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.formatOnSave": false,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.wordWrap": "on",
    
    // 扩展相关优化
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    
    // Git优化
    "git.autofetch": false,
    "git.autoStash": false,
    
    // 工作区信任
    "security.workspace.trust.untrustedFiles": "open",
    
    // Python环境设置
    "python.defaultInterpreterPath": "D:/Programs/aidocs/aidocs-env/Scripts/python.exe",
    
    // 终端优化
    "terminal.integrated.shellIntegration.enabled": false,
    
    // 语言服务器优化
    "python.analysis.autoImportCompletions": false,
    "python.analysis.indexing": false
}
